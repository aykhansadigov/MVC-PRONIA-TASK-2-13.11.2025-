@model List<Category>
@{
    int count = 0;
    int productCount = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Category</h4>
                <div class="table-responsive">
                    <a class="btn btn-success">Create Category</a>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    NO
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Product Count 
                                </th>
                                <th>
                                    Settings
                                </th>
                             
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Category category in Model)
                            {
                                count++;
                                <tr>
                                    <td class="py-1">
                                        @count
                                    </td>
                                    <td>
                                        @category.CategoryName
                                    </td>
                                    <td>
                                        @category.Products.Count
                                    </td>
                                    <td>
                                        <a class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@category.Id"><i class="mdi mdi-pencil"></i></a>
                                        <a class="btn btn-primary"><i class="mdi mdi-open-in-new"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
